{% extends "base.jinja" %}
{% block body %}
    <div>
        <div class="titleDiv">
            Courses
        </div>
        <div class="centerDiv tableBorderColor">
            <table class="table">
            <thead>
              <tr>
                <th>Course</th>
                <th>Grades</th>
              </tr>
            </thead>
            <tbody>
                {% for s in section_list %}
                    <tr>
                        <td>
                            {% if not student %}
                                <a href="/course/{{s['id']}}">
                            {% endif %}
                            {{ s['course_name'] }}
                            </br>
                            {{ s['id'] }}
                            {% if not student %}
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            {% if student %}
                                {{ s['grade'] }}
                            {% else %}
                                {{ s['num_graded'] }}/{{ s['num_students'] }}
                                <br/>
                                graded
                            {% endif %}
                        </td>
                    </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
    </div>
{% endblock %}
