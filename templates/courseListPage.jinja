{% extends "base.jinja" %}
{% block body %}
    <div>
        <div class="titleDiv">
            Courses
        </div>
        <div class="centerDiv tableBorderColor">
            <table class="table">
            <thead>
              <tr>
                <th>Course</th>
                <th>Grades</th>
              </tr>
            </thead>
            <tbody>
                {% for c in classList %}
                    <tr>
                        <td>
                            <a href="/course/{{c['courseId']}}">
                            {{ c['courseName'] }}
                            </br>
                            {{ c['courseId'] }}
                            </a>
                        </td>
                        <td>
                            {% if student %}
                                {{ c['grade'] }}
                            {% else %}
                                {{ c['numGrades'] }}/{{ c['numStudents'] }}
                                <br/>
                                graded
                            {% endif %}
                        </td>
                    </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
    </div>
{% endblock %}
