{% extends "base.jinja" %}
{% block body %}
    <div>
        <div class="titleDiv">
            {{course["courseName"]}}
        </div>
        <div class="centerDiv tableBorderColor">
            <table class="table">
            <thead>
              <tr>
                <th>Lock</th>
                <th>Student</th>
                <th>Grade</th>
              </tr>
            </thead>
            <tbody>
                {% for g in grades %}
                    <tr class="collapsible-header">
                        <td>
                            <input type="checkbox" value="locked">
                        </td>
                        <td>
                            {{ g['student_id'] }}
                        </td>
                        <td>
                            {{ g['grade'] }}
                            <select class="select-grade">
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                                <option value="F">F</option>
                            </select>
                        </td>
                    </tr>
                    <tr class="collapsible-content">
                        <td colspan="2">
                            <strong>Comments</strong>
                            {% for c in comments[g['student_id']] %}
                            <p>
                                {{c["author"]}} - {{c["timestamp"]}}
                                <br>
                                {{c["comment"]}}
                            </p>
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
          </table>
        </div>
        <div class="button_container">
            <button>Lock</button>
        </div>
    </div>
{% endblock %}
